<div class="container">

  <h2 class="text-center">Create new link</h2>

  <%= form_for(@link, url: {action: "create"}, :html => {:class => "form-horizontal"}) do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
      <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :url, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
      <%= f.text_field :url, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit "Submit", class: "btn btn-default" %>
      or <%= link_to('back home', root_path)%>
      </div>
    </div>
  <% end %>

</div>
